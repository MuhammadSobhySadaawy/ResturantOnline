
@model Item

<div class="card" style="width:400px">

    
         <img class="card-img-top" src="/Images/@Model.Image" alt="Card image">
          <div class="card-body">
            <h3> @Model.Id</h3>
            <h4 class="card-title">@Model.Titel</h4>
            <p class="card-text">@Model.Price</p>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">@Model.Status</p>
            <a asp-controller="Item" asp-action="Index" 
               class="btn btn-sm btn-primary rounded-0">Back to List
           </a>
           
          </div>
</div>