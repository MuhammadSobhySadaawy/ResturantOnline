@model List<Menu>

<div class="container py-4 mt-5 mb-5">
    <h1>Show All Menus</h1>
<a href="/Menu/Create" class="btn btn-success">New Menu</a>
<table class="table table-bordered table-hover" >
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Image</th>
                    <th colspan="3">Action(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Menu item in Model)
                    {
					  <tr>
                     
                          <td> @item.Id</td>
                          <td>@item.Titel</td>
                          <td>@item.Type</td>
                          <td>@item.Description</td>
                          <td>@item.Status</td>
						  <td><img src="/Images/@item.Image" width="150" height="100"></td>
						  <td>
                            <a asp-controller="Menu" asp-action="Details" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-success rounded-0">Show</a>
                          </td>
                          <td>
                            <a asp-controller="Menu" asp-action="Edit" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-info rounded-0">Edit</a>
                          </td>
                          <td>
                            <a asp-controller="Menu" asp-action="Delete" 
                            asp-route-id="@item.Id" 
                            class="btn btn-sm btn-danger rounded-0">Delete</a>
                          </td>
					  </tr>
                    }
                </tbody>
            </table>

</div>